//- signup.jade

extend ./layout/layout-public.jade
block content
	.Site-content
		.container
			form.form-signin(action="api/createuser", method="post")
				h2#SignupForm.form-signin-heading Sign up to .... 
				.form-group
					label.sr-only(for="inputEmail") Email address
					input#inputEmail.form-control(type="email", name="email", placeholder="Email address", autofocus, required)
				.form-group
					label.sr-only(for="inputUsername") Username
					input#inputUsername.form-control(type="text", name="username", placeholder="Select a username", autocomplete="off",required)
					span#helpBlock1.help-block
				.form-group
					label.sr-only(for="inputPassword") Password
					input#inputPassword.form-control(type="password", name="password", placeholder="Create your password", required)
					label.sr-only(for="inputPasswordCfm") Confirm Password
					input#inputPasswordCfm.form-control(type="password", placeholder="Retype your password", required)
					span#helpBlock2.help-block
				button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign up