//- tweets.jade

extend ./layout/layout-public.jade
block content
	.Site-content
		.container
			.col-xs-12.col-sm-6.col-sm-offset-3
				#tweets.starter-template
					.row
						h1 Hello {{.UserName}},
						form(action="api/posttweet", method="post")
							.form-group
								label.sr-only(for="postTweet") Post Tweet
								textarea#postTweet.form-control(rows="3", type="text", name="tweet")
							button.btn.btn-success.pull-right(type="submit") Tweet
					.row
						.panel.panel-default
							.panel-heading
								h3.panel-title Panel title
							.panel-body
								| Panel content
